---
layout: layouts/base.njk
title: {{ title }}
---

<div class="container">
    <section class="hero">
        <h1>{{ heroHeading }}</h1>
        <p>{{ heroText }}</p>
    </section>
    
    <section class="resume-section">
        <h2 class="section-title">{{ educationTitle }}</h2>
        {% for item in education %}
        <div class="resume-item">
            <h3>{{ item.degree }}</h3>
            <p class="resume-meta">{{ item.meta }}</p>
            {% if item.description %}
            <p>{{ item.description }}</p>
            {% endif %}
        </div>
        {% endfor %}
    </section>
    
    <section class="resume-section">
        <h2 class="section-title">{{ exhibitionsTitle }}</h2>
        {% for item in exhibitions %}
        <div class="resume-item">
            <h3>{{ item.name }}</h3>
            <p class="resume-meta">{{ item.meta }}</p>
            {% if item.description %}
            <p>{{ item.description }}</p>
            {% endif %}
        </div>
        {% endfor %}
    </section>
    
    <section class="resume-section">
        <h2 class="section-title">{{ awardsTitle }}</h2>
        {% for item in awards %}
        <div class="resume-item">
            <h3>{{ item.name }}</h3>
            <p class="resume-meta">{{ item.meta }}</p>
            {% if item.description %}
            <p>{{ item.description }}</p>
            {% endif %}
        </div>
        {% endfor %}
    </section>
    
    <section class="resume-cta">
        {% if resumePDF %}
        <a href="{{ resumePDF }}" class="button" target="_blank">{{ resumeButtonText }}</a>
        {% endif %}
    </section>
</div>