---
layout: layouts/base.njk
title: Resume
---

<div class="container">
    <section class="hero">
        <h1>{{ resume.heroHeading }}</h1>
        <p>{{ resume.heroText }}</p>
    </section>
    
    {% for section in resume.sections %}
    <section class="resume-section">
        <h2 class="section-title">{{ section.title }}</h2>
        {% for item in section.items %}
        <div class="resume-item">
            <h3>{{ item.heading }}</h3>
            <p class="resume-meta">{{ item.meta }}</p>
            <p>{{ item.description }}</p>
        </div>
        {% endfor %}
    </section>
    {% endfor %}
    
    <section class="resume-cta">
        <a href="{{ resume.ctaButtonLink }}" class="button">{{ resume.ctaButtonText }}</a>
    </section>
</div>