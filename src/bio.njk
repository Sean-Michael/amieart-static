---
layout: layouts/base.njk
title: {{ title }}
---

<div class="container">
    <section class="page-header">
        <h1>{{ pageHeader }}</h1>
    </section>
    
    <section class="bio-section">
        <div class="bio-image">
            <img src="{{ bioImage }}" alt="Amie in her studio">
        </div>
        <div class="bio-content">
            <h2>{{ bioTitle }}</h2>
            {{ bioContent | safe }}
            
            <div class="bio-stats">
                {% for stat in bioStats %}
                <div class="stat-item">
                    <h3>{{ stat.title }}</h3>
                    <p>{{ stat.text }}</p>
                </div>
                {% endfor %}
            </div>
        </div>
    </section>
    
    <section class="history-section">
        <h2>Education & Exhibition History</h2>
        <div class="history-grid">
            <div class="history-column">
                <h3>Education</h3>
                {% for item in education %}
                <div class="history-item">
                    <p class="year">{{ item.year }}</p>
                    <h4>{{ item.title }}</h4>
                    <p>{{ item.institution }}</p>
                </div>
                {% endfor %}
            </div>
            <div class="history-column">
                <h3>Solo Exhibitions</h3>
                {% for item in soloExhibitions %}
                <div class="history-item">
                    <p class="year">{{ item.year }}</p>
                    <h4>{{ item.title }}</h4>
                    <p>{{ item.location }}</p>
                </div>
                {% endfor %}
            </div>
            <div class="history-column">
                <h3>Residencies & Awards</h3>
                {% for item in residenciesAwards %}
                <div class="history-item">
                    <p class="year">{{ item.year }}</p>
                    <h4>{{ item.title }}</h4>
                    <p>{{ item.organization }}</p>
                </div>
                {% endfor %}
            </div>
        </div>
    </section>
    
    <section class="statement-section">
        <h2>{{ statementHeading }}</h2>
        {{ statement | safe }}
    </section>
</div>