---
layout: layouts/base.njk
title: About
---

<div class="container">
    <section class="page-header">
        <h1>{{ bio.pageHeader }}</h1>
    </section>
    
    <section class="bio-section">
        <div class="bio-image-container">
            <div class="bio-image">
                <img src="{{ bio.bioImage }}" alt="Amie in her studio">
            </div>
        </div>
        <div class="bio-content">
            <h2>{{ bio.bioTitle }}</h2>
            <div>{{ bio.bioContent | markdown | safe }}</div>
            <div class="bio-stats">
                {% for stat in bio.bioStats %}
                <div class="stat-item">
                    <h3>{{ stat.title }}</h3>
                    <p>{{ stat.text }}</p>
                </div>
                {% endfor %}
            </div>
        </div>
    </section>
    
    <section class="history-section">
        <h2>Education & Exhibition History</h2>
        <div class="history-grid">
            <div class="history-column">
                <h3>Education</h3>
                {% for edu in bio.education %}
                <div class="history-item">
                    <p class="year">{{ edu.year }}</p>
                    <h4>{{ edu.title }}</h4>
                    <p>{{ edu.institution }}</p>
                </div>
                {% endfor %}
            </div>
            <div class="history-column">
                <h3>Exhibitions</h3>
                {% for solo in bio.soloExhibitions %}
                <div class="history-item">
                    <p class="year">{{ solo.year }}</p>
                    <h4>{{ solo.title }}</h4>
                    <p>{{ solo.location }}</p>
                </div>
                {% endfor %}
            </div>
            <div class="history-column">
                <h3>Residencies & Awards</h3>
                {% for award in bio.residenciesAwards %}
                <div class="history-item">
                    <p class="year">{{ award.year }}</p>
                    <h4>{{ award.title }}</h4>
                    <p>{{ award.location }}</p>
                </div>
                {% endfor %}
            </div>
        </div>
    </section>
    
    <section class="statement-section">
        <h2>Artist Statement</h2>
        <div>{{ bio.statement | markdown | safe }}</div>
    </section>
</div>