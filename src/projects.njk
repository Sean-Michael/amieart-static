---
layout: layouts/base.njk
title: Projects
permalink: /projects/
---

<div class="container">
    <section class="hero">
        <h1>{{ projects.heroHeading }}</h1>
        <p>{{ projects.heroText }}</p>
    </section>
    
    <section class="featured-work">
        <div class="work-grid">
            {%- for project in collections.projects -%}
            <a href="{{ project.url }}" class="work-item">
                <img src="{{ project.data.image }}" alt="{{ project.data.title }}" class="work-image">
                <div class="work-overlay">
                    <h3 class="work-title">{{ project.data.title }}</h3>
                    <p class="work-category">{{ project.data.category }}</p>
                </div>
            </a>
            {%- endfor -%}
            
            {% if collections.projects.length === 0 %}
            <!-- Placeholder items when no projects exist yet -->
            <div class="work-item">
                <img src="/api/placeholder/400/400" alt="Project 1" class="work-image">
                <div class="work-overlay">
                    <h3 class="work-title">Project Title 1</h3>
                    <p class="work-category">Painting Series</p>
                </div>
            </div>
            <div class="work-item">
                <img src="/api/placeholder/400/400" alt="Project 2" class="work-image">
                <div class="work-overlay">
                    <h3 class="work-title">Project Title 2</h3>
                    <p class="work-category">Installation</p>
                </div>
            </div>
            <div class="work-item">
                <img src="/api/placeholder/400/400" alt="Project 3" class="work-image">
                <div class="work-overlay">
                    <h3 class="work-title">Project Title 3</h3>
                    <p class="work-category">Mixed Media</p>
                </div>
            </div>
            {% endif %}
        </div>
    </section>
</div>