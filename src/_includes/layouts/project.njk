---
layout: layouts/base.njk
permalink: /projects/{{ page.fileSlug }}/
templateEngineOverride: njk,md
---

<div class="container">
    <article class="project-detail">
        <header class="project-header">
            <h1>{{ title }}</h1>
            <p class="project-category">{{ category }}</p>
            <p class="project-date">{{ date | dateFilter }}</p>
        </header>
        
        <div class="project-image">
            <img src="{{ image }}" alt="{{ title }}">
        </div>
        
        <div class="project-content">
            {{ content | safe }}
        </div>
        
        {% if artworks %}
        <div class="project-artworks">
            <h2>Project Artworks</h2>
            
            <div class="artworks-grid">
                {% for artworkSlug in artworks %}
                    {% set artwork = collections.artworks | getArtworkBySlug(artworkSlug) %}
                    {% if artwork %}
                    <a href="{{ artwork.url }}" class="artwork-item">
                        <img src="{{ artwork.data.primaryImage }}" alt="{{ artwork.data.title }}" class="artwork-image">
                        <div class="artwork-details">
                            <h3>{{ artwork.data.title }}</h3>
                            {% if artwork.data.medium %}<p class="artwork-medium">{{ artwork.data.medium }}</p>{% endif %}
                            <p class="artwork-view">View Details â†’</p>
                        </div>
                    </a>
                    {% endif %}
                {% endfor %}
            </div>
        </div>
        {% endif %}
        
        <div class="artwork-navigation">
            <a href="/projects/" class="nav-back">
                Back to Projects
            </a>
        </div>
    </article>
    <script src="/js/collection-enhancer.js"></script>
</div>