---
layout: layouts/base.njk
permalink: /projects/{{ page.fileSlug }}/
templateEngineOverride: njk,md
---

<div class="container">
    <article class="project-detail">
        <header class="project-header">
            <h1>{{ title }}</h1>
            <p class="project-category">{{ category }}</p>
            <p class="project-date">{{ date | dateFilter }}</p>
        </header>
        
        <div class="project-image">
            <img src="{{ image }}" alt="{{ title }}">
        </div>
        
        <div class="project-content">
            {{ content | safe }}
        </div>
        
        {% if artworks %}
        <div class="project-artworks">
            <h2>Project Artworks</h2>
            
            <div class="artworks-grid">
                {% for artwork in artworks %}
                <a href="/projects/{{ page.fileSlug }}/artwork/{{ artwork.order | slug }}/" class="artwork-item">
                    <img src="{{ artwork.image }}" alt="{{ artwork.title }}" class="artwork-image">
                    <div class="artwork-details">
                        <h3>{{ artwork.title }}</h3>
                        {% if artwork.medium %}<p class="artwork-medium">{{ artwork.medium }}</p>{% endif %}
                        <p class="artwork-view">View Details →</p>
                    </div>
                </a>
                {% endfor %}
            </div>
        </div>
        {% endif %}
        
        <footer class="project-footer">
            <a href="/projects/" class="back-button">← Back to Projects</a>
        </footer>
    </article>
</div>