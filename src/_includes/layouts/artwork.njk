---
layout: layouts/base.njk
---

<div class="container">
    <article class="artwork-showcase">
        <header class="artwork-header">
            <h1>{{ artwork.title }}</h1>
            <p class="artwork-project-link">From project: <a href="/projects/{{ project.fileSlug }}/">{{ project.data.title }}</a></p>
        </header>
        
        <div class="artwork-image-container">
            <img src="{{ artwork.image }}" alt="{{ artwork.title }}" class="artwork-showcase-image">
        </div>
        
        <div class="artwork-details-container">
            <div class="artwork-info">
                {% if artwork.medium %}<p class="artwork-medium"><strong>Medium:</strong> {{ artwork.medium }}</p>{% endif %}
                {% if artwork.dimensions %}<p class="artwork-dimensions"><strong>Dimensions:</strong> {{ artwork.dimensions }}</p>{% endif %}
                {% if artwork.year %}<p class="artwork-year"><strong>Year:</strong> {{ artwork.year }}</p>{% endif %}
            </div>
            
            {% if artwork.description %}
            <div class="artwork-description">
                {{ artwork.description | markdown | safe }}
            </div>
            {% endif %}
        </div>
        
        <div class="artwork-navigation">
            {% if prevArtwork %}
            <a href="/projects/{{ project.fileSlug }}/artwork/{{ prevArtwork.order or loop.index0 - 1 }}/" class="nav-prev" title="{{ prevArtwork.title }}">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="15 18 9 12 15 6"></polyline></svg>
                Previous
            </a>
            {% endif %}
            
            <a href="/projects/{{ project.fileSlug }}/" class="nav-back">
                Back to Project
            </a>
            
            {% if nextArtwork %}
            <a href="/projects/{{ project.fileSlug }}/artwork/{{ nextArtwork.order or loop.index0 + 1 }}/" class="nav-next" title="{{ nextArtwork.title }}">
                Next
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="9 18 15 12 9 6"></polyline></svg>
            </a>
            {% endif %}
        </div>
    </article>
</div>