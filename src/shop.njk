---
layout: layouts/base.njk
title: {{ title }}
---

<div class="container">
    <section class="hero">
        <h1>{{ heroHeading }}</h1>
        <p>{{ heroText }}</p>
    </section>

    <section class="shop-highlight">
        <div class="shop-content">
            <div class="shop-image">
                <img src="{{ shopImage }}" alt="Etsy Shop Preview" class="shop-preview">
            </div>
            <div class="shop-description">
                <h2>{{ shopHeading }}</h2>
                {{ shopText | safe }}
                <a href="{{ shopUrl }}" class="button" target="_blank">{{ shopButtonText }}</a>
            </div>
        </div>
    </section>
</div>